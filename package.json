{
  "name": "context-hopper",
  "displayName": "Context Hopper",
  "description": "Gather code context for AI agents",
  "version": "0.0.11",
  "publisher": "LihSheng",
  "author": {
    "name": "LihSheng"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LihSheng/ContextHopper.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "context-hopper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "context-hopper.addItem",
        "title": "Add to Context"
      },
      {
        "command": "context-hopper.copyAll",
        "title": "Copy Context",
        "icon": "$(copy)"
      },
      {
        "command": "context-hopper.clear",
        "title": "Clear Context",
        "icon": "$(clear-all)"
      },
      {
        "command": "context-hopper.saveContext",
        "title": "Save Context Group",
        "icon": "$(save)"
      },
      {
        "command": "context-hopper.loadGroup",
        "title": "Load Group",
        "icon": "$(cloud-download)"
      },
      {
        "command": "context-hopper.copyGroup",
        "title": "Copy Group",
        "icon": "$(copy)"
      },
      {
        "command": "context-hopper.deleteGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "context-hopper.pinGroup",
        "title": "Pin Group",
        "icon": "$(pin)"
      },
      {
        "command": "context-hopper.unpinGroup",
        "title": "Unpin Group",
        "icon": "$(pinned)"
      },
      {
        "command": "context-hopper.addGitChanges",
        "title": "Add Git Changes",
        "icon": "$(git-merge)"
      },
      {
        "command": "context-hopper.addFileStructure",
        "title": "Add File Structure",
        "icon": "$(list-tree)"
      },
      {
        "command": "context-hopper.addFolderStructure",
        "title": "Add Folder Structure",
        "icon": "$(list-tree)"
      },
      {
        "command": "context-hopper.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "context-hopper-sidebar",
          "title": "Context Hopper",
          "icon": "$(list-selection)"
        }
      ]
    },
    "views": {
      "context-hopper-sidebar": [
        {
          "type": "webview",
          "id": "context-hopper-view",
          "name": "Context Items",
          "icon": "$(list-selection)"
        },
        {
          "id": "context-hopper-saved",
          "name": "Saved Contexts",
          "icon": "$(archive)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "context-hopper.saveContext",
          "when": "view == context-hopper-view",
          "group": "navigation"
        },
        {
          "command": "context-hopper.copyAll",
          "when": "view == context-hopper-view",
          "group": "navigation"
        },
        {
          "command": "context-hopper.clear",
          "when": "view == context-hopper-view",
          "group": "navigation"
        },
        {
          "command": "context-hopper.addGitChanges",
          "when": "view == context-hopper-view",
          "group": "navigation"
        },
        {
          "command": "context-hopper.addFileStructure",
          "when": "view == context-hopper-view",
          "group": "navigation"
        },
        {
          "command": "context-hopper.refresh",
          "when": "view == context-hopper-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "context-hopper.loadGroup",
          "when": "view == context-hopper-saved && (viewItem == savedGroup || viewItem == savedGroupPinned)",
          "group": "inline"
        },
        {
          "command": "context-hopper.copyGroup",
          "when": "view == context-hopper-saved && (viewItem == savedGroup || viewItem == savedGroupPinned)",
          "group": "inline"
        },
        {
          "command": "context-hopper.pinGroup",
          "when": "view == context-hopper-saved && viewItem == savedGroup",
          "group": "inline"
        },
        {
          "command": "context-hopper.unpinGroup",
          "when": "view == context-hopper-saved && viewItem == savedGroupPinned",
          "group": "inline"
        },
        {
          "command": "context-hopper.deleteGroup",
          "when": "view == context-hopper-saved && (viewItem == savedGroup || viewItem == savedGroupPinned)",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "context-hopper.addItem",
          "group": "context-hopper@1"
        }
      ],
      "explorer/context": [
        {
          "command": "context-hopper.addItem",
          "group": "context-hopper@1"
        },
        {
          "command": "context-hopper.addFolderStructure",
          "when": "explorerResourceIsFolder",
          "group": "context-hopper@2"
        }
      ]
    },
    "configuration": {
      "title": "Context Hopper",
      "properties": {
        "contextHopper.redactSecrets": {
          "type": "boolean",
          "default": true,
          "description": "Automatically redact potential secrets (API keys, passwords) from copied context."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43"
  }
}
