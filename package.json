{
  "name": "context-hopper",
  "displayName": "Context Hopper",
  "description": "Gather code context for AI agents",
  "version": "0.0.4",
  "publisher": "LihSheng",
  "author": {
    "name": "LihSheng"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LihSheng/ContextHopper.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "context-hopper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "context-hopper.addItem",
        "title": "Add to Context"
      },
      {
        "command": "context-hopper.copyAll",
        "title": "Copy Context",
        "icon": "$(copy)"
      },
      {
        "command": "context-hopper.clear",
        "title": "Clear Context",
        "icon": "$(clear-all)"
      },
      {
        "command": "context-hopper.deleteItem",
        "title": "Delete Item",
        "icon": "$(trash)"
      },
      {
        "command": "context-hopper.addGitChanges",
        "title": "Add Git Changes",
        "icon": "$(git-merge)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "context-hopper-sidebar",
          "title": "Context Hopper",
          "icon": "$(list-selection)"
        }
      ]
    },
    "views": {
      "context-hopper-sidebar": [
        {
          "type": "webview",
          "id": "context-hopper-view",
          "name": "Context Items"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "context-hopper.copyAll",
          "when": "view == context-hopper-view",
          "group": "navigation"
        },
        {
          "command": "context-hopper.clear",
          "when": "view == context-hopper-view",
          "group": "navigation"
        },
        {
          "command": "context-hopper.addGitChanges",
          "when": "view == context-hopper-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "context-hopper.deleteItem",
          "when": "view == context-hopper-view",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "context-hopper.addItem",
          "group": "context-hopper@1"
        }
      ],
      "explorer/context": [
        {
          "command": "context-hopper.addItem",
          "group": "context-hopper@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "js-tiktoken": "^1.0.21"
  }
}
